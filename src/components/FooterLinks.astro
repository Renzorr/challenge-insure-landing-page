---
const { title, links } = Astro.props;
---

<div>
  <span
    class="text-sm text-dark-gray tracking-[1.3px] font-bold block pb-7 md:p-5"
  >
    {title}
  </span>
  <ul class="flex flex-col gap-[7.5px]">
    {
      links.map((link) => (
        <li>
          <a href="#" class="link">
            {link}
          </a>
        </li>
      ))
    }
  </ul>
</div>
